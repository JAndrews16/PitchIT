<div class="trip-card current-trips">
    <h2 class="card-title">&#9657;&#9657; Current Adventures &#9667;&#9667;</h2>
    {{#each thirdData}}
        {{#unless completed}}
            {{> adventures/camp-block completed=true}}
        {{/unless}}
    {{/each}}
</div>


<br><br>
<div class="trip-card completed-trips">
    <h2 class="card-title">&#9657;&#9657; Completed Adventures &#9667;&#9667;</h2>
    {{#each thirdData}}
        {{#if completed}}
            {{> adventures/camp-block completed=false}}
        {{/if}}
    {{/each}}
</div>

