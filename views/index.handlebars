    <nav class="main-nav">
        <ul class="main-menu">
            <li class="brand nav-link">
                <img src="img/tent.png" alt="" class='logo' width='50px'>  
            </li>
            <li class="nav-link nav-btn">
                <a href="/create"><button type="button" class="btn btn-outline-success">+ Plan Your Adventure</button></a>
                <a href="../gallery.html"><button type="button" class="gallery-btn btn btn-outline-success">Gallery</button></a>
            </li>
        </ul>

        <ul class="side-menu">
            <li class="nav-link nav-btn">
                <a href="/logout"><button type="button" class="btn btn-outline-success">Sign Out</button></a>
            </li>
        </ul>
    </nav>

    <div class="landing">
        <h1 id="main-title" class="title">PitchIT</h1>
        <h1 class="title">Find Yourself Outside.</h1>

        <br>
        <p class="subtitle">Plan a unique trip with your friends that you will remember for a lifetime.</p>
        
        <br><br><br><br>
        <div class="boxes">
            <div class="box">
                <img src="img/camper.png" alt="" width='50'>
                <h3>Invite Friends</h3>
                <p>Plan an adventure to your favorite spot or discover a new one that's right for you.</p>
            </div>

            <div class="box">
                <img src="https://image.flaticon.com/icons/svg/2977/2977922.svg" alt="" width='50'>
                <h3>Day Passes</h3>
                <p>View up-to-date prices for day and annual passes into National Parks.</p>
            </div>

            <div class="box">
                <img src="img/star.png" alt="" width='50'>
                <h3>Rate</h3>
                <p>Rate your adventure to let others know how you enjoyed that spot and give recommendations.</p>
            </div>
        </div>
    </div>
</div>

<div class="trip-card current-trips">
    <h2 class="card-title">&#9657;&#9657; Current Adventures &#9667;&#9667;</h2>

    {{#each thirdData}}
        {{#unless completed}}
        <div>
            <ul class="trip-ul"></ul>
                {{> adventures/camp-block completed=true}}
            </ul>
        </div>
        {{/unless}}
    {{/each}}

</div>


<br><br>
<div class="trip-card completed-trips">
    <h2 class="card-title">&#9657;&#9657; Completed Adventures &#9667;&#9667;</h2>

    {{#each thirdData}}
        {{#if completed}}
        <div>
            <ul class="trip-ul"></ul>
                {{> adventures/camp-block completed=false}}
            </ul>
        </div>
        {{/if}}
    {{/each}}
</div>

