<div class="trip-dashboard">
    <ul>
        {{#each trips}}
            {{#unless completed}}
                {{> trips/camp-block completed=true}}
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="completed-dashboard">
    <ul>
        {{#each trips}}
            {{#if completed}}
                {{> trips/camp-block completed=false}}
            {{/if}}
        {{/each}}
    </ul>
</div>

